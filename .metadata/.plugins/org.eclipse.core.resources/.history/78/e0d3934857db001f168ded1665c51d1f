# Application and Server Configurations
spring.application.name=mbs
server.port=8081

# Database Configurations
spring.datasource.url=jdbc:mysql://localhost:3306/mbs_2
spring.datasource.username=root      # Replace with your DB username
spring.datasource.password=root      # Replace with your DB password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA Configurations
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
